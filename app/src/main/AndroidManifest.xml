<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.example.ahmed.contacts_mvvm"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="com.example.ahmed.contacts_mvvm.PeopleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.ahmed.contacts_mvvm.view.PeopleActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.ahmed.contacts_mvvm.view.PeopleDetailActivity"
            android:parentActivityName="com.example.ahmed.contacts_mvvm.view.PeopleActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
